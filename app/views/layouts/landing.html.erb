  </head>


    <%= yield %>
<%#
    <a href="/"><header class="blau font-mono" style="font-weight: 500">gabriel ardèvol — web development</header></a>

    <div id= "header-grid">

      <div id="leftside"></div>




      <div id="rightside"></div>

    </div> %>

  </body>


  <script>

  contingut = "<div class='menu'> \
        <% ['about me','projects','contact'].each do |word|%> \
        <a href='/<%=word%>'>\
        <div class='menu-option'> \
            <%= word %> \
          </div> \
        <% end %> \
        </a>\
      </div>"

  rightside = document.getElementById("rightside");
  leftside = document.getElementById("leftside");
  leftside.innerHTML = contingut;


  document.addEventListener("mousemove", function(event) {
    var x = event.pageX;
    if(x <= (window.innerWidth / 4)){
        leftside.innerHTML = contingut;
        rightside.innerHTML = ""
    }else if(x >= (window.innerWidth - (window.innerWidth / 4))){
       rightside.innerHTML = contingut; leftside.innerHTML = ""
    }
    //var y = event.pageY;

});
  </script>
</html>
