<!DOCTYPE html>
<html>
  <head>
    <title>Porfolio</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body style="width: 90%; margin: auto">

    <header>gabriel ardèvol — web development</header>

    <div style="display: grid; grid-template-columns: 1fr 6fr 1fr; grid-gap: 1em">

      <div id="leftside"></div>



      <div>
        <%= yield %>
      </div>

      <div id="rightside"></div>

    </div>

  </body>


  <script>
  rightside = document.getElementById("rightside");
  leftside = document.getElementById("leftside");
  leftside.innerHTML = "<div id='menu'> \
        <% ['about me','projects','contact'].each do |word|%> \
        <div class='menu-option'> \
          <%= word %> \
        </div> \
        <% end %> \
      </div>";


  document.addEventListener("mousemove", function(event) {
    var x = event.pageX;
    if(x <= (window.innerWidth / 4)){
        leftside.innerHTML = "<div id='menu'> \
        <% ['about me','projects','contact'].each do |word|%> \
        <div class='menu-option'> \
          <%= word %> \
        </div> \
        <% end %> \
      </div>"; rightside.innerHTML = ""
    }else if(x >= (window.innerWidth - (window.innerWidth / 4))){
       rightside.innerHTML = "<div id='menu'> \
        <% ['about me','projects','contact'].each do |word|%> \
        <div class='menu-option'> \
          <%= word %> \
        </div> \
        <% end %> \
      </div>"; leftside.innerHTML = ""
    }
    //var y = event.pageY;
    console.log(window.innerWidth)
    console.log("Mouse position: (" + x + ")");
});
  </script>
</html>
